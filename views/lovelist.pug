extends layout

block content
	
	link(rel='stylesheet', href='/stylesheets/lovelist.css')
	nav.navbar.navbar-default.navbar-fixed-top
		div.navbar-header
			a.fa.fa-bars.fa-2x(href="#")
			a.navbar-brand(href="#")
				img.nav-logo.center-block(src="/images/logo.png")
		div.navbar-right
			a.fa.fa-search.fa-2x(href="#")
			a.fa.fa-shopping-cart.fa-2x(href="#")
	div.col-md-6.col-md-offset-3
		div.loveList-header
			div.loveList-title
				h3 LOVELIST
		div.loveList-body#add
		div.loading#load
				i.fa.fa-spinner.fa-spin.fa-2x 
		div.loveList-footer
			button.loadMore(type = "button" onClick = "loadMore()") Load More

	script(src='/js/lovelist.js')




